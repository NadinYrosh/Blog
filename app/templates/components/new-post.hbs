{{#if addNewPost}}
  <h1>New Rental</h1>
      <div>
        <form>
          <div class="form-group">
            <label for="headline">Headline</label>
            {{input value=headline id="headline"}}
          </div>

          <div class="form-group">
            <label for="content">Content</label>
            {{input value=content id="content"}}
          </div>

          <div class="form-group">
            <label for="writter">Writter</label>
            {{input value=writter id="writter"}}
          </div>

          <div class="form-group">
            <label for="date">Date</label>
            {{input value=date id="date"}}
          </div>

          <div class="form-group">
            <label for="image">Image URL</label>
            {{input value=image id="image"}}
          </div>

          <button {{action 'save1'}}>Save</button>
        </form>
      </div>
      {{else}}
    <button {{action 'showPostForm'}}>New post</button>
{{/if}}
